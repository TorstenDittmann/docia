{
	"name": "docia",
	"version": "0.0.15",
	"bin": {
		"docia": "./src/cli.ts"
	},
	"files": [
		"src",
		"README.md"
	],
	"type": "module",
	"module": "src/cli.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"default": "./src/index.ts"
		},
		"./cli": {
			"types": "./src/cli.ts",
			"default": "./src/cli.ts"
		}
	},
	"scripts": {
		"docia": "bun run src/cli.ts --config docs/docia.config.ts",
		"build": "bun run src/cli.ts build --config docs/docia.config.ts",
		"dev": "bun run src/cli.ts dev --config docs/docia.config.ts",
		"serve": "bun run src/cli.ts serve --config docs/docia.config.ts",
		"check": "bun run src/cli.ts check --config docs/docia.config.ts",
		"test": "bun test",
		"lint": "oxlint",
		"lint:fix": "oxlint --fix",
		"fmt": "oxfmt",
		"fmt:check": "oxfmt --check",
		"build:binary": "bun build --compile ./src/cli.ts --outfile docia",
		"build:binaries": "bun run scripts/build-binaries.ts"
	},
	"dependencies": {
		"minisearch": "^7.2.0",
		"picocolors": "^1.1.1",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"shiki": "^3.22.0"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/react": "^19.2.13",
		"@types/react-dom": "^19.2.3",
		"oxfmt": "^0.28.0",
		"oxlint": "^1.43.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
